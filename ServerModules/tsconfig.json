    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outFile": "./build/index.js",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES5",
